{
  "compilerOptions": {
    "baseUrl": "",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "typeRoots": [ "./node_modules/@types" ],
    "lib": [ "es6", "dom" ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules",
    "dist",
    "**/*.ngfactory.ts",
    "**/*.shim.ts",
    "wwwroot/app/main.aot.ts",
    "wwwroot/app/main.conduct.aot.ts",
    "wwwroot/app/main.setup.aot.ts",
    "wwwroot/app/polyfill.ts",
    "wwwroot/app/vendor.ts",
    "build"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  }
}