@{
    ViewBag.BaseHref = "/";
}

<app>
    <div e2e="progress-loader" class="loader-container main-loader">
        <div class="loader-block">
            <div class="spinner"></div>
            <p class="font-semibold mt10">Loading...</p>
        </div>
    </div>
</app>
<form asp-controller="Profile" asp-action="LogOut" method="post" id="logoutForm" class="navbar-right"></form>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.3/Chart.bundle.min.js"></script>

<environment names="Development">
    <!-- Polyfill(s) for older browsers -->
    <script src="/node_modules/core-js/client/shim.min.js"></script>
    <script src="/node_modules/zone.js/dist/zone.js"></script>
    <script src="/node_modules/file-saver/filesaver.js"></script>
    <script src="/node_modules/jspdf/dist/jspdf.debug.js"></script>
    <script src="/node_modules/jspdf-autotable/dist/jspdf.plugin.autotable.js"></script>
    <script src="/node_modules/exceljs/dist/exceljs.min.js"></script>
    <script src="/node_modules/systemjs/dist/system.src.js"></script>
    <script src="/node_modules/screenfull/dist/screenfull.js"></script>
    <script src="/systemjs.config.js"></script>
    <script>
        System.import('/app/main.js').catch(function (err) { console.error(err); });
    </script>
</environment>

<environment names="Staging,Production">
  <script src="https://fastcdn.org/FileSaver.js/1.1.20151003/FileSaver.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.js"></script>
  <script src="/dist/inline.bundle.js"></script>
  <script src="/dist/polyfills.bundle.js"></script>
  <script src="/dist/main.bundle.js"></script>
  <link href="/dist/styles.bundle.css" rel="stylesheet" />
</environment>
