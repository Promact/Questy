@{
    ViewBag.BaseHref = "/";
}

<app>
  <div class="loader-container main-loader">
    <div class="loader-block">
      <div class="spinner"></div>
      <p class="font-semibold mt10">Loading...</p>
    </div>
  </div>
</app>
<form asp-controller="Profile" asp-action="LogOut" method="post" id="logoutForm" class="navbar-right"></form>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.3/Chart.bundle.min.js"></script>

<environment names="Development">
    <script src="~/dist/vendor.js"></script>
    <script src="~/dist/main.js"></script>
</environment>

<environment names="Staging,Production">
  <script>window.module = "aot";</script>
  <script src="/dist/shims.js"></script>
  <script src="/dist/app.bundle.js"></script>
</environment>
