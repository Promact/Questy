@model  Promact.Trappist.DomainModel.ApplicationClasses.Account.ResetPassword
@{
    Layout = "_BeforeLoginLayout";
}

<div class="form-area">
    <div class="titlebar">
        <h1>Reset Password</h1>
    </div>
    <form asp-controller="Account" asp-action="ResetPassword" method="post">
        <input asp-for="Code" type="hidden" />
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" reqired="" />
            <div class="errors-container">
                <span asp-validation-for="Email" class="error-msg">@ViewBag.Error</span>
            </div>
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="New Password" reqired="" />
            <div class="errors-container">
                <span asp-validation-for="Password" class="error-msg"></span>
            </div>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required="" />
            <div class="errors-container">
                <span asp-validation-for="ConfirmPassword" class="error-msg"></span>
            </div>
        </div>
        <div class="actions-area">
            <button type="submit" class="btn btn-primary mb0">Submit</button>
        </div>
    </form>
</div>