@model  Promact.Trappist.DomainModel.ApplicationClasses.Account.ForgotPassword
@{
    Layout = "_BeforeLoginLayout";
}

<div class="form-area frgt-pswd">
    <div class="titlebar">
        <h2>Forgot Password</h2>
    </div>
    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
        <span class="general-error-msg">@ViewBag.EmailError</span>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Provide your Email here"/>
            <div class="errors-container">
                <span asp-validation-for="Email" class="error-msg">@ViewBag.Error</span>
            </div>
        </div>
        <div class="actions-area">
            <button e2e="reset-pwd-btn" type="submit" class="btn btn-primary">Send Password Reset Link</button>
            <a asp-action="Login">Back to Login</a>
        </div>
    </form>
</div>
