@{
    Layout = "_BeforeLoginLayout";
}

<div class="form-area frgt-pswd">
    <div class="titlebar">
        <h1>Forgot Password</h1>
    </div>
    <form>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Provide your Email here" />
        </div>
        <div class="actions-area">
            <button type="submit" class="btn btn-primary">Send Password Reset Link</button>
            <a href="">Back to Login</a>
        </div>
    </form>
</div>
