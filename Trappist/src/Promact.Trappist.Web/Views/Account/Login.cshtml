@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication

@model  Promact.Trappist.DomainModel.ApplicationClasses.Account.Login
@{
    Layout = "_BeforeLoginLayout";
}

<div class="form-area">
    <div class="titlebar">
        <h1>Sign In</h1>
    </div>

    <form asp-controller="Account" asp-action="Login" method="post">
        <span class="general-error-msg">@ViewBag.Error</span>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email" autocomplete="off"/>
            <div class="errors-container">
                <span asp-validation-for="Email" class="error-msg"></span>
            </div>
        </div>

        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="Password" autocomplete="off" onpaste="return false;" />
            <div class="errors-container">
                <span asp-validation-for="Password" class="error-msg"></span>
            </div>
        </div>
        <div class="actions-area">
            <button type="submit" class="btn btn-primary">Sign In</button>
            <a asp-action="ForgotPassword">Forgot Password?</a>
        </div>
    </form>
</div>